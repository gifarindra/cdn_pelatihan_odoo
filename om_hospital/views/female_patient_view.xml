<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- hospital.patient tree view  otree-->
        <record id="hospital_patient_female_view_tree" model="ir.ui.view">
            <field name="name">Female Patients</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name" string="Patient Name" />
                    <field name="ref" />
                    <field name="age" />
                    <field name="gender" />
                </tree>
            </field>
        </record>

        <!-- hospital.patient female form view -->
        <record id="hospital_patient_female_view_form" model="ir.ui.view">
            <field name="name">Female Patient</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <!-- Add your fields here -->
                                <field name="name" />
                                <field name="age" />
                            </group>
                            <group >
                                <!-- Add your fields here -->
                                <field name="ref" />
                                <field name="gender"/>
                                <field name="active" invisible = "True"/> <!--add the archive feature inside the form view-->
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    
        <!-- hospital.patient action window -->
        <!--To perform domain with OR operation use '|' before the tuple if there are two arguments-->
        <record id="hospital_patient_female_action" model="ir.actions.act_window">
            <field name="name">Female Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('gender', '=', 'female')]</field>
            <field name="context" >{'default_gender': 'female'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>
    
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="hospital_patient_female_menu_act" name="Female Patients" parent="hospital_menu_categ" action="hospital_patient_female_action" sequence="20"/>
    </data>
    
</odoo>